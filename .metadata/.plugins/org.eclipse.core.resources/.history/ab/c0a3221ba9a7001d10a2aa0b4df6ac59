package demo.com.controller;

import java.util.List;
import java.util.NoSuchElementException;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import demo.com.dominio.Categoria;
import demo.com.objetos.daos.ICategoriaRepo;

/**
 * @author d.garcia.millan
 *
 */
@RestController
@RequestMapping("/categorias")
public class CategoriaController {
	@Autowired //para que carge en el DAO Spring
	private ICategoriaRepo cDao;
	
	@GetMapping("{id}")
	public Categoria leerId(@PathVariable("id") int id) {
		try {
			Categoria c = cDao.findById(id).get();
			return  c;
		}
		catch(NoSuchElementException e){
			return new String[] {"400","No existe el registro solicitado"};
		}
		return cDao.findById(id).get();
	}
	@GetMapping()
	public List<Categoria> listarCategoria(){
		return null;
		
	}
}
