 */
package demo.com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import demo.com.dominio.Categoria;
import demo.com.objetos.daos.ICategoriaRepo;

/**
 * @author d.garcia.millan
 *
 */
@RestController
@RequestMapping("/categorias")
public class CategoriaController {
	//@Autowired // para que carge en el DAO Spring
	private ICategoriaRepo cDao;
	
	public void IcategoriaRepo(ICategoriaRepo cDao) {
		this.cDao = cDao;
	}
	@GetMapping("{id}")
	public Categoria leerId(@PathVariable("id") int id) {
		return cDao.findById(id).orElseThrow();
	}

	@GetMapping()
	public List<Categoria> listarCategoria() {
		return cDao.findAll();
	}

	@PostMapping // insert
	public String[] alta(@RequestBody Categoria c) {
		if (c.isValid()) {
			cDao.save(c).setId_categoria(0);
			return new String[] { "200", "Registro Salvado" };
		} else {
			return new String[] { "404", "Registro Salvado" }; 
		}
	}

	@DeleteMapping("/{id}")
	public void deleteById(@PathVariable int id) {
		cDao.deleteById(id);
	}
	@DeleteMapping()
	public void deleteById(Categoria c) {
		deleteById(c.getId_categoria());
	}
}
